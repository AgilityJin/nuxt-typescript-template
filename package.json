{
  "name": "nuxt-typescript-template",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "description": "nuxt typescript template",
  "keywords": [
    "Nuxt",
    "Vue",
    "Typescript",
    "template"
  ],
  "author": "Agility Jin <agility_jin@outlook.com>",
  "engines": {
    "node": "<13.0.0",
    "npm": ">=5.2.0"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development && nuxt-ts",
    "build": "cross-env NODE_ENV=production && nuxt-ts build",
    "generate": "cross-env NODE_ENV=production && nuxt-ts generate",
    "start": "cross-env NODE_ENV=production && nuxt-ts start",
    "lint": "eslint --ext .ts,.js,.vue --ignore-path .gitignore .",
    "lintfix": "eslint --fix --ext .ts,.js,.vue --ignore-path .gitignore .",
    "commit": "git cz"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@mdi/js": "^5.0.45",
    "@nuxt/types": "^0.6.4",
    "@nuxt/typescript-build": "^0.6.0",
    "@nuxtjs/eslint-config-typescript": "^1.0.2",
    "@nuxtjs/eslint-module": "^1.1.0",
    "@nuxtjs/proxy": "^1.3.3",
    "@nuxtjs/vuetify": "^1.11.0",
    "@types/lodash": "^4.14.149",
    "@types/node": "^13.9.0",
    "@typescript-eslint/parser": "^2.29.0",
    "babel-plugin-component": "^1.1.1",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-html": "^6.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-nuxt": "^0.5.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.3",
    "stylus": "^0.54.7",
    "stylus-loader": "^3.0.2"
  },
  "dependencies": {
    "@nuxt/typescript-runtime": "^0.4.0",
    "@nuxtjs/dotenv": "^1.4.1",
    "@nuxtjs/router": "^1.5.0",
    "@nuxtjs/style-resources": "^1.0.0",
    "@nuxtjs/svg-sprite": "^0.4.9",
    "cross-env": "^7.0.2",
    "date-fns": "^2.12.0",
    "lodash": "^4.17.19",
    "minireset.css": "^0.0.6",
    "nuxt": "^2.11.0",
    "vue-property-decorator": "^8.4.0",
    "vuex-class": "^0.3.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
